<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Compose new micropost...", class: "counttextarea" %>
      <span id="countchars"></span>
    </div>
    <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>